data "aws_vpc" "rke2-vpc" {
  id = var.vpc_id
}

data "aws_subnet_ids" "rke2-subnet-ids" {
  vpc_id = data.aws_vpc.rke2-vpc.id
}

data "aws_ami" "ubuntu" {
  most_recent = true
  owners      = ["099720109477"]

  filter {
    name   = "name"
    values = ["ubuntu-minimal/images/*/ubuntu-focal-20.04-*"]
  }

  filter {
    name   = "virtualization-type"
    values = ["hvm"]
  }

  filter {
    name   = "root-device-type"
    values = ["ebs"]
  }

  filter {
    name   = "architecture"
    values = ["x86_64"]
  }
}
